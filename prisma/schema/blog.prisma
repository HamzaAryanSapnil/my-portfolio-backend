model Blog {
  id            String   @id @default(uuid())
  title         String
  slug          String   @unique
  description   String?
  content       String?
  category      String?
  tags          String[] @default([])
  featuredImage String?
  authorId      String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("blogs")
}
